<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="circularReferencesA" name="nameA" class="com.pazz.bean.CircularReferencesA">
        <property name="referencesB" ref="nameB"></property>
    </bean>

    <bean id="circularReferencesB" name="nameB" class="com.pazz.bean.CircularReferencesB">
        <property name="referencesA" ref="nameA"></property>
    </bean>

</beans>
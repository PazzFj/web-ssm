<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pazz.dao.IPersonDao">

    <select id="getPersons" resultType="com.pazz.entity.Person">
        select * from person
        <where>
            <if test="null != name  and '' != name ">
                and pname like #{name}
            </if>
            <if test="null != _parameter.get('param2') ">
                and page = #{param2}
            </if>
        </where>
    </select>

    <update id="updatePerson" parameterType="string">
        UPDATE person SET pname = #{name } WHERE pid = 1
    </update>

</mapper>
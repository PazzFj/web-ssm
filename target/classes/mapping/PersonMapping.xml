<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pazz.dao.IPersonDao">

    <resultMap id="person" type="com.pazz.entity.Person">
        <id column="pid" property="pid" jdbcType="INTEGER"></id>
        <result column="pname" property="pname" jdbcType="VARCHAR"></result>
        <result column="page" property="page" jdbcType="INTEGER"></result>
    </resultMap>

    <!-- concat('%', #{name}, '%') -->
    <select id="getPersons" resultType="com.pazz.entity.Person">
        select * from person
        <where>
            <if test="null != name and '' != name">
                <bind name="name" value="'%' + name + '%'"/>
                and pname like #{name}
            </if>
            <if test="0 != page">
                and page = #{page}
            </if>
        </where>
    </select>

    <update id="updatePerson">
        UPDATE person SET pname = #{name} WHERE pid = #{pid}
    </update>

</mapper>